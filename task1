import openai

# 設置 OpenAI API 金鑰
openai.api_key = 'your-openai-api-key'  # 這裡需要換成你的 API 金鑰

# 定義函數來與 GPT-4 模型進行互動
def get_ai_response(prompt):
    try:
        # 使用 GPT-4 生成回應
        response = openai.Completion.create(
            model="gpt-4",  # 確保使用 gpt-4 模型
            prompt=prompt,
            max_tokens=150,
            temperature=0.7
        )
        return response.choices[0].text.strip()  # 返回 AI 的回應
    except Exception as e:
        return f"Error: {e}"  # 若有錯誤，返回錯誤訊息

# 要測試的多個提示
prompts = [
    "What is the capital of France?",
    "Summarize the plot of Shakespeare's Hamlet in 3 sentences.",
    "Write a short story about a dragon who loses its fire-breathing ability.",
    "How do you solve the equation 3x + 5 = 20?",
    "Do you think AI will replace human jobs in the future?",
    "Write a funny joke about computers.",
    "Explain the difference between machine learning and deep learning.",
    "Translate 'Hello, how are you?' into French.",
    "What were the causes of the French Revolution?",
    "What should I do if I want to start learning to code?"
]

# 測試每個提示，並顯示 AI 回應
for prompt in prompts:
    response = get_ai_response(prompt)
    print(f"Prompt: {prompt}\nResponse: {response}\n")

for prompt in prompts:
    response = get_ai_response(prompt)
    print(f"Prompt: {prompt}\nResponse: {response}\n")
